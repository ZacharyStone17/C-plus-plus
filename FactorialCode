			// factorial.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include "pch.h"
#include <iostream>
using namespace std;

int factorial(int n) {
	if (n == 0) {
		return 1;
	}
	else {
		return n * factorial(n - 1);
	}
}

int main()
{
	int a;
	cout << "Enter a number" << endl;
	cin >> a;
	cout << "The factorial of the number you entered is" << " " << factorial(a);
}

 
